<Window x:Class="RAP_WPF.ResearcherDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RAP_WPF"
        mc:Ignorable="d"
        Title="ResearcherDetail" Height="450" Width="800">
    <Border Padding="10">
        <StackPanel>
            <!-- Title -->
            <Grid Background="LightGray" Height="40">
                <TextBlock Text="Researcher Detail" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="1" Name="SearchBox" Margin="0,0,10,0"/>
                <Button Grid.Column="2" Name="SearchButton" Content="Search"/>
                <ComboBox Grid.Column="3" Name="FilterByLevel" Margin="20,0,10,0">
                    <ComboBoxItem Content="Level A"/>
                    <ComboBoxItem Content="Level B"/>
                    <ComboBoxItem Content="Level C"/>
                    <ComboBoxItem Content="Level D"/>
                    <ComboBoxItem Content="Level E"/>
                    <ComboBoxItem Content="Student"/>
                </ComboBox>
                <Button Grid.Column="4" Content="Reset"/>
            </Grid>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>

                <!-- Navbar -->
                <ListBox Grid.Column="0" Height="300" Margin="0,0,10,0">
                    <ListBoxItem Content="Researcher List"/>
                    <ListBoxItem Content="Reports"/>
                </ListBox>
                <Grid Grid.Column="1" Height="300" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <Image Width="60" Height="60" HorizontalAlignment="Left"/>
                        <TextBlock Text="Name"/>
                        <TextBlock Text="Job Title"/>
                        <TextBlock Text="School"/>
                        <TextBlock Text="Campus"/>
                        <TextBlock Text="Email"/>
                        <TextBlock Text="Commenced with institution"/>
                        <TextBlock Text="Commenced current position"/>
                        <TextBlock Text="Tenure"/>
                        <TextBlock Text="Previous positions"/>
                        <TextBlock Text="Q1 percentage"/>
                        <TextBlock Text="3 year average"/>
                        <TextBlock Text="Performance by publications"/>
                        <TextBlock Text="Performance by funding"/>
                        <TextBlock Text="Supervision"/>
                    </StackPanel>
                    <Grid Grid.Column="1">
                        <DataGrid></DataGrid>
                    </Grid>

                </Grid>

            </Grid>
        </StackPanel>
    </Border>
</Window>
